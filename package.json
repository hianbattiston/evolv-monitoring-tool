{
  "name": "evolv-monitoring-tool",
  "version": "0.1.0",
  "description": "Real-time monitoring tool for experiments",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:backend": "nx run backend:dev",
    "start:frontend": "nx run frontend:dev",
    "dev": "nx run-many --target=dev --projects=backend,frontend --parallel",
    "build": "nx run-many --target=build --projects=backend,frontend,shared --parallel",
    "build:backend": "nx run backend:build",
    "build:frontend": "nx run frontend:build",
    "build:shared": "nx run shared:build",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "test:backend": "nx run backend:test --forceExit",
    "test:frontend": "nx run frontend:test"
  },
  "keywords": [
    "monitoring",
    "experiments",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@nx/jest": "^20.6.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "nx": "20.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "nx": {}
}
